html.lenis
  height auto

.lenis.lenis-smooth
  scroll-behavior auto

.lenis.lenis-smooth [data-lenis-prevent]
  overscroll-behavior contain

.lenis.lenis-stopped
  overflow hidden

.lenis.lenis-scrolling iframe
  pointer-events none

.splide.is-initialized:not(.is-active) .splide__list
  display flex !important
  gap 2rem

.arrow, .round-arrow
  user-select none

.testimonials__slider, .presence__slider, .bump__slider, .study-gallery__slider
  .splide__track
    overflow visible

/* ------------------------------ */

.filter__search:not(:placeholder-shown) ~ .search__ico-wrap .search-ico
  opacity 0
  visibility hidden
.filter__search:not(:placeholder-shown) ~ .search__ico-wrap .x-ico
  opacity 1

.filter-select__select
  --active-tab var(--blue1)
  height 3.5rem !important
  appearance: none 
  &::-webkit-scrollbar // hide scrollbar in Chrome
    display none

@media screen and (min-width 992px), not screen and (hover none)
  .filter-select__select

    option
      font-weight 500
      padding 0 1.5rem
      align-items center
      display inline-flex
      cursor pointer
      height 100%
      transition all 300ms
      &:hover
        color var(--blue1)

    option:not(:last-child)
    // option:not(:first-child):not(:last-child)
      box-shadow 1px 0px 0px 0px rgba(0, 0, 0, 0.15)

    option:checked
      background: var(--active-tab) linear-gradient(0deg, var(--active-tab) 0%, var(--active-tab) 100%);
      color white
      color -internal-inactive-list-box-selection-text !important
      box-shadow none

    // option:checked + option
    //   box-shadow: none
filterSelectMob()
  padding: 0 2rem 0 1.5rem !important
  background-image url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http:\/\/www.w3.org\/2000\/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='3' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e") !important
  background-repeat no-repeat !important
  background-position right 1rem center !important 
  background-size 1em !important
  border none !important

@media screen and (max-width 991px), screen and (hover none)
  .filter-select__select
     filterSelectMob() 

// safari only
@media not all and (min-resolution: 0.001dpcm) 
  @supports (-webkit-appearance:none)
    .filter-select__select
       filterSelectMob()
    
  
      


